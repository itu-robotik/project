<?xml version="1.0" ?>
<sdf version="1.8">
    <model name="my_robot">
        <pose>0 0 0.05 0 0 0</pose>
        <link name="chassis">
            <pose>0 0 0.05 0 0 0</pose>
            <inertial>
                <pose>0 0 0.1 0 0 0</pose>
                <mass>15.0</mass>
                <inertia><ixx>0.8</ixx><ixy>0</ixy><ixz>0</ixz><iyy>1.0</iyy><iyz>0</iyz><izz>0.5</izz></inertia>
            </inertial>
            <visual name="base_vis"><geometry><box><size>0.4 0.3 0.1</size></box></geometry><material><ambient>0.2 0.2 0.2 1</ambient></material></visual>
            <collision name="base_col"><geometry><box><size>0.4 0.3 0.1</size></box></geometry></collision>
            
            <!-- Direk (Mast) -->
            <visual name="mast_vis"><pose>0 0 0.5 0 0 0</pose><geometry><box><size>0.05 0.05 0.9</size></box></geometry><material><ambient>0.8 0.8 0.8 1</ambient></material></visual>
            <collision name="mast_col"><pose>0 0 0.5 0 0 0</pose><geometry><box><size>0.05 0.05 0.9</size></box></geometry></collision>

            <!-- Kamera (Tepede - Hafif Yukarı Bakış) -->
            <sensor name="camera" type="camera">
                <pose>0.05 0 0.95 0 -0.2 0</pose> <!-- 0.2 rad yukarı tilt -->
                <topic>camera</topic>
                <frame_id>base_link</frame_id>
                <update_rate>30</update_rate>
                <camera>
                    <horizontal_fov>1.2</horizontal_fov> <!-- FOV Genişletildi -->
                    <image><width>640</width><height>480</height></image>
                </camera>
                <visualize>true</visualize>
            </sensor>
            <!-- Lidar (Tabanda) -->
            <sensor name="lidar" type="gpu_lidar">
                <pose>0.1 0 0.25 0 0 0</pose>
                <topic>scan</topic>
                <frame_id>base_scan</frame_id>
                <update_rate>10</update_rate>
                <lidar><scan><horizontal><samples>360</samples><resolution>1</resolution><min_angle>-3.14</min_angle><max_angle>3.14</max_angle></horizontal></scan><range><min>0.05</min><max>10.0</max></range></lidar>
            </sensor>
        </link>
        <link name="left_wheel"><pose>0 0.17 0.05 -1.57 0 0</pose><inertial><mass>0.5</mass><inertia><ixx>0.001</ixx><ixy>0</ixy><ixz>0</ixz><iyy>0.001</iyy><iyz>0</iyz><izz>0.001</izz></inertia></inertial><visual name="v"><geometry><cylinder><radius>0.05</radius><length>0.04</length></cylinder></geometry></visual><collision name="c"><geometry><cylinder><radius>0.05</radius><length>0.04</length></cylinder></geometry></collision></link>
        <link name="right_wheel"><pose>0 -0.17 0.05 -1.57 0 0</pose><inertial><mass>0.5</mass><inertia><ixx>0.001</ixx><ixy>0</ixy><ixz>0</ixz><iyy>0.001</iyy><iyz>0</iyz><izz>0.001</izz></inertia></inertial><visual name="v"><geometry><cylinder><radius>0.05</radius><length>0.04</length></cylinder></geometry></visual><collision name="c"><geometry><cylinder><radius>0.05</radius><length>0.04</length></cylinder></geometry></collision></link>
        <link name="caster"><pose>-0.15 0 0.025 0 0 0</pose><visual name="v"><geometry><sphere><radius>0.025</radius></sphere></geometry></visual><collision name="c"><geometry><sphere><radius>0.025</radius></sphere></geometry></collision></link>
        <joint name="lw_joint" type="revolute"><parent>chassis</parent><child>left_wheel</child><axis><xyz>0 0 1</xyz></axis></joint>
        <joint name="rw_joint" type="revolute"><parent>chassis</parent><child>right_wheel</child><axis><xyz>0 0 1</xyz></axis></joint>
        <joint name="caster_joint" type="ball"><parent>chassis</parent><child>caster</child></joint>
        <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive"><left_joint>lw_joint</left_joint><right_joint>rw_joint</right_joint><wheel_separation>0.34</wheel_separation><wheel_radius>0.05</wheel_radius><topic>cmd_vel</topic><odom_topic>odom</odom_topic><tf_topic>tf</tf_topic><frame_id>odom</frame_id><child_frame_id>base_footprint</child_frame_id></plugin>
    </model>
</sdf>
